
<div class="row">
	<div class="span6 offset3">
		<%= form_for @project do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name, t('projects.inputName') %>
			<%= f.text_field :name %>

			<%= f.label :projectStart, t('projects.projectStart') + " " + t('misc.date') %>
			<%= f.text_field :projectStart, :class => "datepicker", :value => l(@project.projectStart, format: :picker) %>

			<% unless @project.id.nil? %>
				<%= f.label :state, t('projects.state') %>
				<%= f.select(:state, [
																										[t('projects.current_state'),'current'],
																										[t('projects.finished_state'),'finished'],
																										[t('projects.aborted_state'),'aborted']
				]			
																									 ) %>
				<br />
				<%= f.submit t('projects.update_project'), class: "btn btn-large btn-primary" %>
			<% end %>
			<% if @project.id.nil? %>
				<br />
				<%= f.submit t('projects.create_project'), class: "btn btn-large btn-primary" %>
			<% end %>
		<% end %>
	</div>
</div>
