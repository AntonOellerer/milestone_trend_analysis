<header class="navbar navbar-fixed-top navbar-inverse">
<div class="navbar-inner">
	<div class="container">
		<%= link_to t('misc.appname'), root_path, id: "logo" %>
		
		
		<nav>
		<ul class="nav pull-right">
			<% if !(user_signed_in?) %>
				<li><%= link_to t('users.sign_in'), new_user_session_path %></li>
			<%else%>
				<%if current_user.isAdmin?%>

        <li class="dropdown">
        <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
          <i class="icon-white icon-wrench"></i>
          <%= t 'admin.administration' %> <b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to project_list_path do %>
            <i class="icon-briefcase"></i>
            <%= t('admin.projectmanagment') %>
          <% end %>
            </li>
            <li><%= link_to  users_path do %>
            <i class="icon-user"></i>
            <%= t('admin.usermanagement') %>
          <% end %>
            </li>
        </ul>
        </li>
        <%end%>
        <li class="dropdown">
        <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
         <i class="icon-user icon-white"></i>
          <% if current_user.firstName.blank? && current_user.lastName.blank? then %>
            <%= current_user.email  %>
          <% else %>
            <%= current_user.firstName unless current_user.firstName.blank? %>
            <%= current_user.lastName unless current_user.lastName.blank? %>
          <% end %>
          <b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to edit_user_registration_path do %>
            <i class="icon-pencil"></i>
            <%= t('users.profile') %>
          <% end %>
            </li>
          <li>
          <%= link_to destroy_user_session_path, :method => :delete do %>
            <i class="icon-off"></i>
            <%= t('users.sign_out')%>
          <%end%> 
          </li>
        </ul>
        </li>
      <%end%>
    </ul>
    </nav>
  </div>
</div>
</header>
